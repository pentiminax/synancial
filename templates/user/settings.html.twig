{% extends 'base.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xl-6 offset-xl-4">

                <nav>
                    <div class="nav nav-tabs mb-3" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-my-account-tab" data-bs-toggle="tab"
                                data-bs-target="#nav-my-account" type="button" role="tab" aria-controls="nav-my-account"
                                aria-selected="true">
                            Mon compte
                        </button>
                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile"
                                type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Sécurité
                        </button>
                        <button class="nav-link" id="nav-sync-tab" data-bs-toggle="tab" data-bs-target="#nav-sync"
                                type="button" role="tab" aria-controls="nav-sync" aria-selected="false">Comptes synchronisés
                        </button>
                    </div>
                </nav>

                <div class="tab-content" id="nav-tabContent">

                    <div class="tab-pane fade show active" id="nav-my-account" role="tabpanel">
                        {% include 'user/_my_account_tab.html.twig' %}
                    </div>

                    <div class="tab-pane fade" id="nav-profile" role="tabpanel"></div>

                    <div class="tab-pane fade" id="nav-sync" role="tabpanel">
                        <div class="text-center">
                            {% include 'partials/_loading_indicator.html.twig' %}
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('settings') }}
{% endblock %}