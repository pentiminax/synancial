{% extends 'base.html.twig' %}

{% block title %}{{ symbol.name }}{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col">
                <h3>
                    <a class="text-decoration-none text-dark" href="{{ path('app_symbol_index') }}">
                        <i class="fas fa-long-arrow-alt-left"></i>
                        {{ symbol.name }}
                    </a>
                </h3>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <table class="fw-bold table table-striped table-hover text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Date Ex-Dividende</th>
                                    <th scope="col">Date de paiment</th>
                                    <th scope="col">Dividende</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for dividend in symbol.dividends %}
                                    <tr>
                                        <td>{{ dividend.exDate|date('d/m/Y') }}</td>
                                        <td>{{ dividend.payDate|date('d/m/Y') }}</td>
                                        <td><h5><span class="badge bg-success">{{ dividend.amount }}</span></h5></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}