{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container mb-5">
        <div class="row">
            <div class="col-xl-9">
                <div class="row">

                    <div class="card-group mb-4">
                        {% include 'dashboard/_assets_card.html.twig' with {'class': 'total-wealth', 'label': 'dashboard.labels.total_wealth'|trans } %}
                        {% include 'dashboard/_assets_card.html.twig' with {'class': 'net-worth', 'label': 'dashboard.labels.net_worth'|trans } %}
                        {% include 'dashboard/_assets_card.html.twig' with {'class': 'financial-assets', 'label': 'dashboard.labels.financial_assets'|trans } %}
                    </div>

                    <div class="col-xl-5 mb-4">
                        <div class="card bg-light text-center">
                            <div class="card-header">
                                {{ 'dashboard.labels.asset_allocation'|trans }}
                            </div>
                            <div class="card-body">
                                <canvas id="allocationChart"></canvas>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-7 mb-4">

                    </div>

                </div>
            </div>
            <div class="col-xl-3">
                {% include 'dashboard/_news_card.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}