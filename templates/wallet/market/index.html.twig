{% extends 'base.html.twig' %}

{% block title %}Comptes d'investissement{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">

            <h2>
                <a class="text-decoration-none text-dark" href="{{ path('wallet') }}">
                    <i class="fas fa-long-arrow-alt-left"></i>
                    Comptes d'investissements
                </a>
            </h2>

            <div class="col-xl-5">
                <div class="card">
                    <div class="card-body">
                    </div>
                </div>
            </div>

            <div class="col-xl-7 market-area">
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
