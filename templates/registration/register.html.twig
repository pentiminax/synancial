<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Se connecter</title>
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 420px;
            padding: 15px;
            margin: auto;
        }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

    </style>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="text-center">
    <main class="form-signin">
        <div class="card bg-light">
            <div class="card-body">
                <p class="mb-3 text-muted">Vous avez déjà un compte ?<p>
                <p><a class="text-decoration-none" href="{{ path('login') }}"><b>Connectez-vous.</b></a></p>

                {{ form_start(registrationForm) }}
                <h1 class="h3 mb-3 fw-normal">S'inscrire</h1>

                <div class="form-floating mb-3">
                    {{ form_widget(registrationForm.email) }}
                    <label for="registration_form_email">Adresse e-mail</label>
                </div>

                <div class="form-floating">
                    {{ form_widget(registrationForm.plainPassword) }}
                    <label for="registration_form_plainPassword">Mot de passe</label>

                </div>

                <button class="w-100 btn btn-lg btn-primary" type="submit">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>

    </main>
</body>
</html>